<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/nombre_price_med_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Medicamento" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Unit (S/.): "
                    android:tint="@color/colorSilverChalice"/>

                <TextView
                    android:id="@+id/precio_price_med_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.50"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/map_price_med_row"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_pin_drop_white_24dp"
            android:tint="@color/colorDodgetBlue" />

    </RelativeLayout>

    <View
        android:id="@+id/separator_price_med_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorSilverChalice"
        android:paddingBottom="20dp" />

</LinearLayout>